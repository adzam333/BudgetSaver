<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetSaver.Views.AddEventPage"
             Title="Add Event">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Entry Placeholder="Name" Text="{Binding Name}" />
            <Entry Placeholder="Description" Text="{Binding Description}" />
            <DatePicker Date="{Binding Date}" />
            <Button Text="Add" Command="{Binding AddEventCommand}" />
            <Button Text="Edit" Command="{Binding EditEventCommand}" />
            <Button Text="Delete" Command="{Binding DeleteEventCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
